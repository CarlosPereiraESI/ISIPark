<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controller.Add_VehicleActivity"
    android:background="@color/background">

    <ImageView
        android:id="@+id/code_logo"
        android:layout_width="300dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        android:layout_marginTop="15dp"
        android:src="@drawable/logo" />

    <EditText
        android:layout_width="410dp"
        android:layout_height="60dp"
        android:textColor="@color/text"
        android:background="@color/white"
        android:text="@string/add_vehicle"
        android:textSize="80px"
        android:textAlignment="center"
        android:textStyle="bold"
        android:enabled="false"
        android:id="@+id/add_info_et"
        app:layout_constraintTop_toBottomOf="@id/code_logo"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="35dp"/>

    <TextView
        android:layout_width="120dp"
        android:layout_height="20dp"
        app:layout_constraintTop_toBottomOf="@+id/add_info_et"
        android:id="@+id/type"
        android:textStyle="bold"
        android:text="@string/add_vehicletype"
        android:textSize="16dp"
        android:textColor="@color/black"
        android:layout_marginStart="60dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="60dp"/>

    <Spinner
        android:id="@+id/addvehicletype"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:backgroundTint="@color/white"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="@id/type"
        app:layout_constraintStart_toEndOf="@id/type"
        app:layout_constraintTop_toTopOf="@id/type"
        />

    <TextView
        android:layout_width="120dp"
        android:layout_height="20dp"
        app:layout_constraintTop_toBottomOf="@+id/type"
        android:id="@+id/Registration"
        android:textStyle="bold"
        android:text="@string/add_vehicleRegistration"
        android:textSize="16dp"
        android:textColor="@color/black"
        android:layout_marginStart="60dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="55dp" />

    <EditText
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:textColor="@color/black"
        android:background="@color/white"
        android:id="@+id/AddVehicleRegistration"
        app:layout_constraintBottom_toBottomOf="@id/Registration"
        app:layout_constraintStart_toEndOf="@id/Registration"
        app:layout_constraintTop_toTopOf="@id/Registration" />

    <Button
        android:layout_width="127dp"
        android:layout_height="40dp"
        android:text="@string/add_vehicle_save"
        android:textSize="12dp"
        android:textStyle="bold"
        android:id="@+id/addVehicleSave"
        app:layout_constraintTop_toBottomOf="@id/Registration"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:gravity="center"
        android:textColor="@color/strings"
        android:backgroundTint="@color/buttons"
        android:layout_marginTop="40dp"
        app:cornerRadius="25dp" />

    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="@string/back"
        android:textColor="@color/strings"
        android:backgroundTint="@color/buttons"
        android:id="@+id/addVehicle_back"
        app:layout_constraintTop_toBottomOf="@id/addVehicleSave"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="140dp"
        app:cornerRadius="25dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>