<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/title_parking_edit"
        android:layout_width="330dp"
        android:layout_height="25dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:text="@string/parking"
        android:textSize="20sp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/sector"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_marginStart="75dp"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title_parking_edit" />

    <ImageView
        android:id="@+id/logo_cross"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/cross"
        app:layout_constraintStart_toEndOf="@id/sector"
        app:layout_constraintTop_toBottomOf="@id/title_parking_edit"
        />

    <ImageView
        android:id="@+id/logo_edit"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/edit"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@id/logo_cross"
        app:layout_constraintTop_toBottomOf="@id/title_parking_edit"
        />

    <ImageView
        android:id="@+id/logo_plus"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/plus"
        android:layout_gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sector"
        />

</androidx.constraintlayout.widget.ConstraintLayout>