<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/buttons">

    <ImageView
        android:id="@+id/logo_not"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/parque"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/data_notifiUser"
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginStart="20dp"
        app:layout_constraintBottom_toBottomOf="@id/logo_not"
        app:layout_constraintStart_toEndOf="@id/logo_not"
        app:layout_constraintTop_toTopOf="@id/logo_not" />

    <TextView
        android:id="@+id/mensagem_notifiUser"
        android:layout_width="220dp"
        android:layout_height="70dp"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/data_notifiUser"
        />

</androidx.constraintlayout.widget.ConstraintLayout>