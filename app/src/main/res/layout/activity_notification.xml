<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NotificationActivity"
    android:background="@color/background">


        <ImageView
            android:id="@+id/code_logo"
            android:layout_width="300dp"
            android:layout_height="100dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:gravity="center"
            android:layout_marginTop="15dp"
            android:src="@drawable/logo" />

        <EditText
            android:layout_width="410dp"
            android:layout_height="60dp"
            android:textColor="@color/text"
            android:background="@color/white"
            android:text="@string/notifocation_titulo"
            android:textSize="80px"
            android:textAlignment="center"
            android:textStyle="bold"
            android:enabled="false"
            android:id="@+id/notif_titulo"
            app:layout_constraintTop_toBottomOf="@id/code_logo"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="35dp"/>

        <ListView
            android:id="@+id/main_listview"
            android:layout_width="410dp"
            android:layout_height="350dp"
            app:layout_constraintTop_toBottomOf="@id/notif_titulo"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="35dp" />

        <Button
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="@string/back"
            android:textColor="@color/strings"
            android:backgroundTint="@color/buttons"
            android:id="@+id/code_back_btn"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="40dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>