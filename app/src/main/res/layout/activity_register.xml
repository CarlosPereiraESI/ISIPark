<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity"
    android:background="@color/background">

    <ImageView
        android:id="@+id/register_logo"
        android:layout_width="300dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        android:layout_marginTop="100dp"
        android:src="@drawable/logo" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/perfil"
        app:layout_constraintTop_toBottomOf="@id/register_logo"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="110dp"
        android:layout_marginStart="20dp"/>


    <EditText
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text=""
        android:hint="  Email"
        android:textColor="@color/text"
        android:background="@color/buttons"
        android:id="@+id/register_email_et"
        app:layout_constraintTop_toTopOf="@id/register_logo"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="60dp"
        android:layout_marginTop="200dp"/>

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/locker"
        app:layout_constraintTop_toBottomOf="@id/register_email_et"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="50dp"
        android:layout_marginStart="20dp"/>

    <EditText
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text=""
        android:hint="  Password"
        android:textColor="@color/text"
        android:background="@color/buttons"
        android:inputType="textPassword"
        android:id="@+id/register_password_et"
        app:layout_constraintTop_toBottomOf="@id/register_email_et"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="60dp"
        android:layout_marginTop="40dp"/>

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/locker"
        app:layout_constraintTop_toBottomOf="@id/register_password_et"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="50dp"
        android:layout_marginStart="20dp"/>

    <EditText
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text=""
        android:hint="  Confirm Password"
        android:textColor="@color/text"
        android:background="@color/buttons"
        android:inputType="textPassword"
        android:id="@+id/register_conf_password_et"
        app:layout_constraintTop_toBottomOf="@id/register_password_et"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="60dp"
        android:layout_marginTop="40dp"/>

    <Button
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:text="@string/create_or"
        android:textColor="@color/strings"
        android:backgroundTint="@color/buttons"
        android:id="@+id/register_create_btn"
        app:layout_constraintTop_toBottomOf="@id/register_conf_password_et"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="80dp"/>




</androidx.constraintlayout.widget.ConstraintLayout>