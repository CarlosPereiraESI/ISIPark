<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Controller.SendNotificationActivity"
    android:background="@color/background">


    <ImageView
        android:id="@+id/code_logo"
        android:layout_width="300dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        android:layout_marginTop="15dp"
        android:src="@drawable/logo" />

    <EditText
        android:layout_width="410dp"
        android:layout_height="60dp"
        android:textColor="@color/text"
        android:background="@color/white"
        android:text="@string/send_noti"
        android:textSize="80px"
        android:textAlignment="center"
        android:textStyle="bold"
        android:id="@+id/send_noti_titulo"
        app:layout_constraintTop_toBottomOf="@id/code_logo"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="35dp"/>

    <TextView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:text="@string/sendNoti_for"
        android:id="@+id/send_noti_for_t"
        app:layout_constraintTop_toBottomOf="@id/send_noti_titulo"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="35dp"
        android:layout_marginStart="50dp"
        android:textSize="16dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginEnd="20dp"

        />
    <EditText
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_margin="5dp"
        android:textColor="@color/black"
        android:id="@+id/AddVehicleRegistration"
        app:layout_constraintBottom_toBottomOf="@id/send_noti_for_t"
        app:layout_constraintStart_toEndOf="@id/send_noti_for_t"
        app:layout_constraintTop_toTopOf="@id/send_noti_for_t"
        />

    <TextView
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:id="@+id/send_nofi_all_t"
        android:text="@string/sendNoti_all"
        android:layout_margin="10dp"
        app:layout_constraintBottom_toBottomOf="@id/AddVehicleRegistration"
        app:layout_constraintStart_toEndOf="@id/AddVehicleRegistration"
        app:layout_constraintTop_toTopOf="@id/AddVehicleRegistration"
        android:textSize="16dp"
        android:textStyle="bold"
        android:textColor="@color/black"/>

    <RadioButton
        android:id="@+id/send_nofi_radioButton"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:backgroundTint="@color/black"
        app:layout_constraintBottom_toBottomOf="@id/send_nofi_all_t"
        app:layout_constraintStart_toEndOf="@id/send_nofi_all_t"
        app:layout_constraintTop_toTopOf="@id/send_nofi_all_t" />

    <TextView
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:text="@string/sendNoti_messa"
        android:id="@+id/send_noti_messade_t"
        app:layout_constraintTop_toBottomOf="@id/send_noti_for_t"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="35dp"
        android:layout_marginStart="50dp"
        android:textSize="16dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginEnd="20dp"
        />

    <EditText
        android:id="@+id/send_nofi_messa_text"
        android:layout_width="190dp"
        android:layout_height="130dp"
        android:layout_margin="5dp"
        android:layout_marginStart="8dp"
        android:background="@color/white"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@id/send_noti_messade_t"
        app:layout_constraintTop_toTopOf="@id/send_noti_messade_t" />

    <Button
        android:id="@+id/send_nofi_btn"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="@string/sendNoti_send"
        android:textColor="@color/text"
        android:textSize="15dp"
        app:cornerRadius="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/send_nofi_messa_text"
        android:backgroundTint="@color/white"/>


    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="@string/sendNoti_back"
        android:textColor="@color/strings"
        android:backgroundTint="@color/buttons"
        android:id="@+id/send_back_btn"
        app:layout_constraintTop_toBottomOf="@id/send_nofi_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="150dp"
        app:cornerRadius="25dp"
        />



</androidx.constraintlayout.widget.ConstraintLayout>