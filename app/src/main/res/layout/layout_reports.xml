<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/buttons">

    <ImageView
        android:id="@+id/logo_report"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/parque"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/titulo_report"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginStart="20dp"
        app:layout_constraintBottom_toBottomOf="@id/logo_report"
        app:layout_constraintStart_toEndOf="@id/logo_report"
        app:layout_constraintTop_toTopOf="@id/logo_report" />

    <TextView
        android:id="@+id/dados_report"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:textSize="15sp"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titulo_report" />

    <TextView
        android:id="@+id/data_report"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:textSize="15sp"
        android:textColor="@color/text"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dados_report" />

</androidx.constraintlayout.widget.ConstraintLayout>